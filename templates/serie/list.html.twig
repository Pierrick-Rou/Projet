{% extends 'base.html.twig' %}

{#{% block title %}{{ parent() - Catalogue() }}#}

{% block body %}

    <h1 class="styled-nav"> Liste </h1>


    {% if page > 1 %}
        <a class="styled-nav" href="{{ path('list',{'page':page-1}) }}">page précédente</a>
    {% endif %}
    {% if page < totPage %}
        <a class="styled-nav" href="{{ path('list',{'page':page+1}) }}">page suivante</a>
    {% endif %}

    <table class="styled-table">
        <tr>
            <th>Id</th>
            <th>Nom</th>
            <th>Genre</th>
            <th>status</th>
            <th>Vote</th>
            <th>Popularity</th>
            <th>First air date</th>
            <th>Last air date</th>

        </tr>
    {% for serie in series  %}
        <tr>
            <td>{{ serie.id }}</td>
            <td>{{ serie.name }}</td>
            <td>{{ serie.genre }}</td>
            <td>{{ serie.status }}</td>
            <td>{{ serie.vote }}</td>
            <td>{{ serie.popularity }}</td>
            <td>{{ serie.firstAirDate|date('d/m/y') }}</td>
            <td>{{ serie.lastAirDate|date('d/m/y') }}</td>
        </tr>
    {% endfor %}
    </table>

{% endblock %}