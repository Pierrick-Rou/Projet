<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/jinx.png') }}">
        {% block stylesheets %}
        {% endblock %}

        {% block javascripts %}
            {% block importmap %}{{ importmap('app') }}{% endblock %}
        {% endblock %}
    </head>
    <body>
    <div  class="image-container"><img classe="imgCentre" src="{{ asset('images/jinx.png') }}" class="arrondi" alt="logo Eniflix"></div>
    <nav  class="styled-nav">
        <ul>
            <li><a href="{{ path('home') }}">Home</a></li>
            <li><a href="">Catalogue</a></li>
            <li><a href="{{ path('list') }}">Liste des films</a></li>
        </ul>
    </nav>

    {% for type, messages in app.flashes %}

        {% for message in messages %}

            <div class="alert alert-{{ type }}">
                {{ message }}
            </div>
        {% endfor %}
    {% endfor %}

    {% block body %}{% endblock %}
    </body>
</html>
